<resources>

    <style name="textView.sub.title" parent="Theme.PemiluApp">
        <item name="android:textColor">@color/blue_grey_700</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintHorizontal_bias">0.0</item>
    </style>

    <style name="FormInput.EntryDataLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomStart">@dimen/cornerInputLayout</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/cornerInputLayout</item>
        <item name="boxCornerRadiusTopStart">@dimen/cornerInputLayout</item>
        <item name="boxCornerRadiusTopEnd">@dimen/cornerInputLayout</item>
        <item name="endIconMode">clear_text</item>
        <item name="expandedHintEnabled">false</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="counterEnabled">true</item>
    </style>

    <style name="DataText.Header" parent="DataText.Body">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textColor">"@color/blue_grey_700"</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DataText.Body" parent="">
        <item name="android:gravity">start</item>
        <item name="android:textColor">"@color/grey_700"</item>
        <item name="android:textSize">15sp</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="layout_constrainedHeight">true</item>
        <item name="layout_constraintHorizontal_bias">0.0</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="DataText.Header.List" parent="DataText.Header">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DataText.Body.List" parent="DataText.Body">
        <item name="android:textSize">14sp</item>
    </style>
</resources>