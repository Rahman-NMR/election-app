<resources>

    <style name="materialTextListButtonIcon" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="iconPadding">16dp</item>
        <item name="iconSize">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="materialTextListButtonIcon.red" parent="materialTextListButtonIcon">
        <item name="materialThemeOverlay">@style/color.red</item>
    </style>

    <style name="materialbutton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_gravity">center</item>
        <item name="android:insetTop">2dp</item>
        <item name="android:insetBottom">2dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.07</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">99dp</item>
    </style>

    <style name="materialOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:insetTop">2dp</item>
        <item name="android:insetBottom">2dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.07</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">99dp</item>
    </style>

    <style name="iconOnly.button" parent="Widget.MaterialComponents.Button">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="color.red" parent="">
        <item name="colorPrimary">?attr/colorError</item>
    </style>
</resources>