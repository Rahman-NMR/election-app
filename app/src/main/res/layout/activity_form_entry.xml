<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_container"
    tools:context=".ui.FormEntryActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/app_bar"
            style="@style/kostum.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:paddingEnd="4dp"
            app:contentInsetStartWithNavigation="0dp"
            app:navigationIcon="@drawable/baseline_arrow_back_24"
            app:title="Form Entry Data" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="@dimen/bottomdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_max="700dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            style="@style/textView.sub.title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/nik"
                            tools:visibility="gone" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/nik"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/stroke1_16"
                            android:hint="@string/masukan_nik"
                            android:inputType="number"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="16dp"
                            android:textColorHint="@color/grey_500"
                            android:textSize="14sp"
                            tools:visibility="gone" />

                        <TextView
                            style="@style/textView.sub.title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/nama" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/nama"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/stroke1_16"
                            android:hint="@string/masukan_nama"
                            android:inputType="text|textPersonName|textCapSentences"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="16dp"
                            android:textColorHint="@color/grey_500"
                            android:textSize="14sp" />

                        <TextView
                            style="@style/textView.sub.title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/no_hp" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/nohp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/stroke1_16"
                            android:hint="@string/masukan_no_hp"
                            android:inputType="phone"
                            android:maxLength="15"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="16dp"
                            android:textColorHint="@color/grey_500"
                            android:textSize="14sp" />

                        <TextView
                            style="@style/textView.sub.title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/jenis_kelamin"
                            tools:visibility="gone" />

                        <RadioGroup
                            android:id="@+id/radio_group"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:visibility="gone">

                            <RadioButton
                                android:id="@+id/cowo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="40dp"
                                android:text="@string/laki_laki"
                                android:textColor="@color/grey_700" />

                            <RadioButton
                                android:id="@+id/cewe"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="40dp"
                                android:text="@string/perempuan"
                                android:textColor="@color/grey_700" />
                        </RadioGroup>

                        <TextView
                            style="@style/textView.sub.title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/tanggal"
                            tools:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            tools:visibility="gone">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/tanggal"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/stroke1_16"
                                android:enabled="false"
                                android:hint="@string/pilih_tanggal"
                                android:inputType="datetime|date"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="16dp"
                                android:textColor="@color/grey_700"
                                android:textColorHint="@color/grey_500"
                                android:textSize="14sp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_date"
                                style="@style/materialOutlinedButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:minHeight="40dp"
                                android:text="@string/pilih" />
                        </LinearLayout>

                        <TextView
                            style="@style/textView.sub.title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/alamat"
                            tools:visibility="gone" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/alamat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/stroke1_16"
                            android:gravity="top"
                            android:hint="@string/masukan_alamat"
                            android:imeOptions="actionDone"
                            android:inputType="textLongMessage|textMultiLine|textCapSentences"
                            android:lineSpacingExtra="4sp"
                            android:maxLength="200"
                            android:maxLines="10"
                            android:minLines="4"
                            android:padding="8dp"
                            android:scrollbars="vertical"
                            android:singleLine="false"
                            android:textColorHint="@color/grey_500"
                            android:textSize="14sp"
                            tools:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical|end"
                            android:orientation="horizontal"
                            tools:visibility="gone">

                            <TextView
                                android:id="@+id/tv_lokasi_sekarang"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/lokasi"
                                android:textColor="@color/grey_500"
                                android:visibility="gone"
                                tools:visibility="visible" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_cek_lokasi"
                                style="@style/materialOutlinedButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginStart="8dp"
                                android:minHeight="40dp"
                                android:text="@string/cek_lokasi" />
                        </LinearLayout>

                        <TextView
                            style="@style/textView.sub.title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/gambar" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp"
                            app:cardMaxElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:foreground="@drawable/stroke1_16"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_gambar"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:paddingHorizontal="24dp"
                                    android:paddingVertical="64dp"
                                    android:text="@string/data_tidak_ditemukan"
                                    android:textColor="@color/grey_500"
                                    android:textSize="14sp" />

                                <ImageView
                                    android:id="@+id/gambar"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:importantForAccessibility="no"
                                    android:scaleType="fitXY"
                                    android:visibility="gone"
                                    tools:visibility="visible" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_open_galery"
                                style="@style/materialOutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:minHeight="40dp"
                                android:text="@string/buka_galeri" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_open_cam"
                                style="@style/materialOutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:minHeight="40dp"
                                android:text="@string/buka_kamera" />
                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_submit"
                            style="@style/materialbutton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="28dp"
                            android:text="@string/submit_data" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>